<section id="section1" class="cd-section">
  <div class="content-wrapper">
    <!-- video -->
    <div class="homepage-hero-module">
      <div class="video-container">
        <%= video_tag "video.mp4", autoplay: true, class: "fillWidth", loop: true %>
        <div class="layer"></div>
        <div class="overlay">
          <%= image_tag "logo.png", class: "logo" %>
          <br><br><br><br><br><br><br>
          <h2 class="line-1 anim-typewriter">Web Consulting & Venture Product Development </h2>
        </div>
      </div>
    </div>
  </div>
</section><!-- cd-section -->

<section id="section2" class="cd-section split-section">
  <div class="content-wrapper">
    <div class="split-container">
      <div class="split-item split-right">
        <h2>About</h2>
        <p>We are a software and technology development firm that designs, develops and grows websites and web applications.</p>
        <p>We build scalable software using a variety of technologies and know which tools to use to guarantee the success of your project.</p>
      </div>
      <div class="split-item split-left">
        <div class="split-image">
          <%= image_tag "Office.png" %>
        </div>
      </div>
    </div>
  </div>
</section><!-- cd-section -->

<section id="section3" class="cd-section">
  <div class="content-wrapper">
    <%= render partial: 'pages/services' %>
  </div>
</section><!-- cd-section -->

<section id="section4" class="cd-section">
  <%= render partial: 'pages/contact_form' %>
